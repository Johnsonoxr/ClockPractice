    android:height="20dp"
    android:viewportWidth="100"
    android:viewportHeight="100">

    <!-- Filled Oval -->
    <path
        android:fillColor="?attr/colorPrimary"
        android:pathData="M50,0
                           A50,50 0 1,1 50,100
